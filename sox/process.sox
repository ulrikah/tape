    #     speed 0.5 \
    #     reverb \
    #     stretch 2 \
    #     reverse \
    #     reverb norm -0.1 \
    #     speed 4 \
    #     lowpass 2000
    

    sox $FILE $OUTPUT \
        speed 0.9 \
        lowpass 2000 \
        overdrive 1.2

    echo "${OUTPUT} ðŸŒ»"
    # play $OUTPUT
done